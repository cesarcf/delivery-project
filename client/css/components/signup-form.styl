
div.signup
	display flex
	flex-direction column //MAIN AXIS
	align-items center //CROSS-AXIS
	height 400px
	margin-top 65px
	@media $media-screen-min-tablet
		justify-content center //MAIN AXIS


	h2
		font-size 1.5em
		@media $media-screen-min-tablet
			margin-top 0px

	form
		position relative //para posicionar los errores de los campos
		display flex
		flex-direction column //MAIN AXIS
		align-items center //CROSS-AXIS
		width 300px

		div
			position relative
			width 100%
			select
				margin-bottom 5px
				text-align-last center

			input
				text-align center
				width 100%
				margin 0px 0px 5px 0px
				// &.error
				// 	border 1px solid red

			input[type='checkbox']
				width auto
				margin 0px
				margin 5px

			label
				span
					// border 1px solid red

		// div.error
		// 	font-size 0.7em
