		// 	margin 0px 0px 5px 0px

		div.terminos
			display flex
			justify-content center
			align-items center //CROSS-AXIS
			margin 5px 0px 10px 0px

			input
				width auto
				margin 0px 5px 0px 0px
			label
				text-transform none
				font-size .7em

		button
			width 100%

